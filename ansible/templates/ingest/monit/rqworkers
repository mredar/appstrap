check process worker1
	with pidfile "{{ role_home_dir.stdout }}/log/rqworker-1.pid"
	start program "/bin/su - {{ whoami }} -c '{{ role_home_dir.stdout }}/bin/start-rqworker.sh 1'"
	stop program "/bin/cat {{ role_home_dir.stdout }}/log/rqworker-1.pid | /usr/bin/xargs /bin/kill" 
        depends on docker_redis, docker_couchdb

check process worker2
	with pidfile "{{ role_home_dir.stdout }}/log/rqworker-2.pid"
	start program "/bin/su - {{ whoami }} -c '{{ role_home_dir.stdout }}/bin/start-rqworker.sh 2'"
	stop program "/bin/cat {{ role_home_dir.stdout }}/log/rqworker-2.pid | /usr/bin/xargs /bin/kill" 
        depends on docker_redis, docker_couchdb

check process worker3
	with pidfile "{{ role_home_dir.stdout }}/log/rqworker-3.pid"
	start program "/bin/su -  {{ whoami }} -c '{{ role_home_dir.stdout }}/bin/start-rqworker.sh 3'"
	stop program "/bin/cat {{ role_home_dir.stdout }}/log/rqworker-3.pid | /usr/bin/xargs /bin/kill" 
        depends on docker_redis, docker_couchdb
